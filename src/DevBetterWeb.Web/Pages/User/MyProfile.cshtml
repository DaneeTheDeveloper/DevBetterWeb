@page
@model DevBetterWeb.Web.Pages.User.MyProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<h3>My Profile</h3>


<div class="row">
    <div class="col-7">
        <div class="card">
            <div class="card-header">
                <b>Personal</b>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label class="font-weight-bold">First Name</label>
                    <p>@Model.UserProfileUpdateModel.FirstName</p>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">Last Name</label>
                    <p>@Model.UserProfileUpdateModel.LastName</p>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">Shipping Address</label>
                    <span class="text-secondary small">Only administrators can view this information</span>
                    @if (Model.UserProfileUpdateModel.Address == null)
                    {
                        <p>none</p>
                    }
                    else
                    {
                        <p>@Model.UserProfileUpdateModel.Address</p>
                    }
                </div>

                <label class="font-weight-bold">About</label>
                @if (Model.UserProfileUpdateModel.AboutInfo == null)
                {
                    <p>none</p>
                }
                else
                {
                    <p>@Model.UserProfileUpdateModel.AboutInfo</p>
                }

                <label class="font-weight-bold">Project Euler Username</label>
                @if (Model.UserProfileUpdateModel.PEUsername == null)
                {
                    <p>none</p>
                }
                else
                {
                    <p>@Model.UserProfileUpdateModel.PEUsername</p>
                }

                <label class="font-weight-bold">Project Euler Friend Code</label>
                @if (Model.UserProfileUpdateModel.PEFriendCode == null)
                {
                    <p>none</p>
                }
                else
                {
                    <p>@Model.UserProfileUpdateModel.PEFriendCode</p>
                }

                <a class="btn btn-primary nav-item" href="/User/MyProfile/Personal">Edit</a>

            </div>
        </div>
        <br />

        <div class="card">
            <div class="card-header">
                <b>Books You've Read</b>
            </div>
            @if (Model.UserProfileUpdateModel.BooksRead.Any())
            {
                @foreach (var book in Model.UserProfileUpdateModel.BooksRead)
                {
                    <div class="card-body">
                        <strong>
                            @book.ToString()
                        </strong>
                    </div>
                }
            }
            else
            {
                <div class="card-body">You haven't read any books yet. Add one below!</div>
            }
            <div class="card-body">

                <a class="btn btn-primary nav-item" href="/User/MyProfile/Books">Edit</a>

            </div>
        </div>


    </div>
    <div class="col-5">
        <div class="card">
            <div class="card-header">
                <b>Links</b>
            </div>
            <div class="card-body">

                <label class="font-weight-bold">Blog</label>
                @if (Model.UserProfileUpdateModel.BlogUrl == null)
                {
                    <p>none</p>
                }
                else
                {
                    <p>@Model.UserProfileUpdateModel.BlogUrl</p>
                }

                <label class="font-weight-bold">Github</label>
                @if (Model.UserProfileUpdateModel.GithubUrl == null)
                {
                    <p>none</p>
                }
                else
                {
                    <p>@Model.UserProfileUpdateModel.GithubUrl</p>
                }

                <label class="font-weight-bold">LinkedIn</label>
                @if (Model.UserProfileUpdateModel.LinkedInUrl == null)
                {
                    <p>none</p>
                }
                else
                {
                    <p>@Model.UserProfileUpdateModel.LinkedInUrl</p>
                }

                <label class="font-weight-bold">Twitter</label>
                @if (Model.UserProfileUpdateModel.TwitterUrl == null)
                {
                    <p>none</p>
                }
                else
                {
                    <p>@Model.UserProfileUpdateModel.TwitterUrl</p>
                }

                <label class="font-weight-bold">Twitch</label>
                @if (Model.UserProfileUpdateModel.TwitchUrl == null)
                {
                    <p>none</p>
                }
                else
                {
                    <p>@Model.UserProfileUpdateModel.TwitchUrl</p>
                }

                <label class="font-weight-bold">YouTube</label>
                @if (Model.UserProfileUpdateModel.YouTubeUrl == null)
                {
                    <p>none</p>
                }
                else
                {
                    <p>@Model.UserProfileUpdateModel.YouTubeUrl</p>
                }

                <label class="font-weight-bold">Other</label>
                @if (Model.UserProfileUpdateModel.OtherUrl == null)
                {
                    <p>none</p>
                }
                else
                {
                    <p>@Model.UserProfileUpdateModel.OtherUrl</p>
                }

                <a class="btn btn-primary nav-item" href="/User/MyProfile/Links">Edit</a>

            </div>
        </div>


    </div>
</div>




